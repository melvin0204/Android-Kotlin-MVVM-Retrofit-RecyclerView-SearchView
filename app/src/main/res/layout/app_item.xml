<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="DataModel"
            type="com.hypebeast.coding.hypebeast_app.Model.DataModel" />

        <variable
            name="recyclerModel"
            type="com.hypebeast.coding.hypebeast_app.ViewModel.RecyclerModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#000"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                <TextView android:layout_width="50dp"
                          android:layout_height="wrap_content"
                          android:textColor="#FFFF00"
                          android:textSize="12sp"
                          android:text="Name:"/>
                <TextView
                        android:id="@+id/employee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@{DataModel.employee_name}"
                        android:textColor="#FFFF00"
                        android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                <TextView android:layout_width="50dp"
                          android:layout_height="wrap_content"
                          android:textColor="#FFFF00"
                          android:textSize="12sp"
                          android:text="Age:"/>

                <TextView
                        android:id="@+id/employee_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@{DataModel.employee_age}"
                        android:textColor="#FFFF00"
                        android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                <TextView android:layout_width="50dp"
                          android:layout_height="wrap_content"
                          android:textColor="#FFFF00"
                          android:textSize="12sp"
                          android:text="Salary:"/>
                <TextView
                    android:id="@+id/employee_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@{DataModel.employee_salary}"
                    android:textColor="#FFFF00"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>